<%= form_for @prestation, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :projet, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :projet, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :production, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :production, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :commentaire, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :commentaire, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :category_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                prestations_path, :class => 'btn' %>
  </div>
<% end %>
