<%- model_class = Prestation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @prestation.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:projet) %>:</strong></dt>
  <dd><%= @prestation.projet %></dd>
  <dt><strong><%= model_class.human_attribute_name(:production) %>:</strong></dt>
  <dd><%= @prestation.production %></dd>
  <dt><strong><%= model_class.human_attribute_name(:commentaire) %>:</strong></dt>
  <dd><%= @prestation.commentaire %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @prestation.category_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              prestations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_prestation_path(@prestation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              prestation_path(@prestation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
